#!/usr/bin/env node

const { Transform } = require('stream');
const JSONStream = require('JSONStream');

const algorithms = {

  "6NF"(){
    const XmlTo6NFTransform = require('./src/XmlTo6NFTransform');
    process.stdin
    .pipe(new XmlTo6NFTransform())
    .pipe(JSONStream.stringify(false))
    .pipe(process.stdout);
  },

  "5NF"(){
    const XmlTo5NFTransform = require('./src/XmlTo5NFTransform');
    process.stdin
    .pipe(new XmlTo5NFTransform())
    .pipe(JSONStream.stringify(false))
    .pipe(process.stdout);
  },

};



const algorithm = algorithms[process.argv[2]];
if (typeof algorithm === 'function') {
  algorithm();
} else {
  throw new Error("Unsupported algorithm: " + algorithm);
}


